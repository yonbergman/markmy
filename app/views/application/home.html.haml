- @noheight = true
- content_for :on_body do
  .bg-img
    .bgg{:style => "background-image: url('https://farm1.staticflickr.com/45/149754989_e7f517336c_b.jpg')"}

  #home
    .jumbotron
      .container
        .row.home-header
          %h1.text-center!= t('home.header')
        .row
          = form_for @blurb, class: 'form-inline' do |f|
            .form-group.col-md-9.col-sm-7
              = f.text_area :text, class: 'form-control demo-text',rows: 1, maxlength: 120, placeholder: 'Write what ever you want...'
            .form-group.col-md-3.col-sm-5.text-right.first-blurb
              = f.submit t('home.action'), class: 'btn btn-md btn-primary btn-block btn-create-blurb'

        .row
          .col-md-9.col-sm-7
            %span &nbsp;
            %i.fa.fa-lock.fa-lg
            %span Predictions can never be edited and are timestamped when first created.
          .col-md-3.col-sm-5
            %span.timestamp
              %strong
                %span.caplitalize #{t('timestamp').capitalize}:
              %br.visible-md
              %span.value= Time.now

    .container
      %br
      .row.why
        .col-xs-10.col-xs-offset-1
          .row
            - %w(why.timestamped why.secure why.share).each do |scope|
              .col-sm-4
                %i.fa.fa-5x{class: t('icon', scope: scope)}
                %h2= t('title', scope: scope)
                %hr
                %p= t('content', scope: scope)

      :javascript
        el = $('.timestamp .value')
        run = function(){el.text(moment().format('YYYY-MM-DD HH:mm:ss'))}
        run();
        setInterval(
          function() { run(); }
          , 250
          )
