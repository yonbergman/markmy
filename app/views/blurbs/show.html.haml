#blurb-page.row
  = render 'blurbs/image_with_text', blurb: @blurb
  .action-bar
    %span
      %strong Share:
      %span &nbsp;
    .btn.btn-sm.btn-default
      %i.fa.fa-facebook
      %span Share on Facebook
    .btn.btn-sm.btn-default
      %i.fa.fa-twitter
      %span Share on Twitter
    .copy-link
      .input-group
        %input.form-control{type: "text", value: blurb_url(@blurb)}
        %span.input-group-btn
          %button.btn.btn-default{type: "button"}
            %i.fa.fa-link
            %span Copy Link

  .rundown
