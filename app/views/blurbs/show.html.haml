- content_for :on_body do
  .bg-img
    .bgg{:style => "background-image: url('#{@blurb.background}')"}

  - unless @blurb.custom_background?
    .img-attribution
      Image by
      = link_to @blurb.image_attribution.author, @blurb.image_attribution.src, target: :_blank


#prediction-page
  .prediction-poster{:style => "background-color: #{@blurb.color}"}
    .content
      .text
        = @blurb.text
        .attribution
          %span{ blurb_user_attributes } #{@blurb.username},
          %span.timeago{'data-livestamp' => @blurb.time.to_i} #{time_ago_in_words(@blurb.time)} ago
  .notice
    This prediction was created on
    %em= @blurb.time
    %br
    and was locked for changes since


  .share-row
    .copy-link.hidden-xs
      .input-group
        %input.form-control{type: "text", value: blurb_url(@blurb)}
        %span.input-group-btn
          %button.btn.btn-default#copy-link{type: "button"}
            %i.fa.fa-link
            %span= t('blurb.copy_link')
    = render_shareable :url => blurb_url(@blurb), :buttons=> ['facebook', 'twitter'], :text => "#{t('blurb.share_description')} #{@blurb.text}"


- if author?
  .change-image
    %button.btn.btn-sm.change-image-button{data: {container: 'body', toggle: 'popover', placement: 'bottom'}}
      %i.fa.fa-picture-o
    .moods.hidden
      = form_for(@blurb) do |f|
        .btn-group
          %p Change background:
          - Images.moods.each do |mood|
            %button.btn.btn-block.btn-default{type: 'submit', name: 'blurb[mood]', value: mood, class: @blurb.mood==mood && 'btn-primary'}= mood.capitalize

      %br
      = direct_upload_form_for @uploader, :'data-no-turbolink'=> true do |f|
        = f.file_field :image_url, class: 'hidden file-input', accept: "image/*"
        %button.btn-upload-file.btn.btn-block.btn-default{type: 'button'}
          %span.before
            %i.fa.fa-picture-o
            %span Upload Image
          %span.during.hidden
            %i.fa.fa-spinner.fa-spin
            %span Uploading...


:javascript
  copyUrl('#copy-link', #{blurb_url(@blurb).to_json});
  // $(".btn[data-toggle='popover']").popover()
  $('.change-image-button').popover({
    html: true,
    content: $('.moods').html()
  })
